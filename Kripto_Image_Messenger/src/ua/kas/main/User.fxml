<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="200.0" minWidth="400.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ua.kas.main.MessengerUser">
   <children>
      <Label alignment="CENTER" layoutX="236.0" prefHeight="50.0" prefWidth="150.0" text="User">
         <font>
            <Font name="Times New Roman" size="40.0" />
         </font>
      </Label>
      <ImageView fx:id="iv_encryption" fitHeight="150.0" fitWidth="200.0" layoutX="14.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true" />
      <Button layoutX="236.0" layoutY="50.0" mnemonicParsing="false" onAction="#selectEcryptionImage" prefHeight="25.0" prefWidth="150.0" text="Select Image">
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font>
      </Button>
      <TextField fx:id="tf_enterText" layoutX="236.0" layoutY="82.0" promptText="write text">
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font>
      </TextField>
      <Button layoutX="236.0" layoutY="136.0" mnemonicParsing="false" onAction="#go" prefHeight="50.0" prefWidth="150.0" text="Start">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Button>
      <TextField fx:id="tf_enterKey" layoutX="236.0" layoutY="108.0" promptText="key">
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font>
      </TextField>
   </children>
</AnchorPane>
